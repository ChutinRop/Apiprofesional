generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("postgresql://postgres:chutingod@localhost:5432/productosdb?schema=public")
}

model Product{
  id          Int      @id @default(autoincrement())
  nombre     String    @db.VarChar(100)
  descripcion String   @db.VarChar(255)
  precio     Decimal     @db.Decimal(10, 2)
  stock      Int       @default(0)
  sku        String    @unique
}